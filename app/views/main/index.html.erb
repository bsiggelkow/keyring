<%= javascript_include_tag :defaults %>
<%= stylesheet_link_tag 'application' %>
<h2>Welcome to Keyring!</h2>
<div id='wrapper'>
  <div id='keywords'>
    <h3>Search using these keywords and phrases:</h3>
    <ul id='keyword-list'>
      <%= render :partial => 'shared/keyword', :collection => @keywords %>
    </ul>
    <%= link_to_remote 'Search', :url => {:action => 'search'} %>
    <p>
    Add Keyword: 
    <% remote_form_for :keyword, :url => keywords_path(:format => 'js') do |f| %>
      <%= f.text_field :phrase %>
      <%= f.submit 'Add' %>
    <% end %>
    <%= link_to_remote 'Clear all keywords', :url => clear_all_keywords_path, :method => :delete %>
    </p>
  </div>
  <div id='search-results'>
    <h3>Search Results (via Yahoo BOSS)</h3>
    <%= link_to 'RSS Feed', formatted_main_index_path(:rss) %>
    <div id='search-results-list'>
      <%= render :partial => 'result', :collection => @results %>
    </div>
  </div>
  <div id='footer'></div>
</div>